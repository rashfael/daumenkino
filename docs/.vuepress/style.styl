@import url('https://fonts.googleapis.com/css?family=Roboto|Roboto+Mono')
// @import '../../../../buntpapier'
$clr-primary = $clr-blue
variables()
// normalize-css()
base()
// typography()
components()
scrollbars()

stripe(colors, angle, width)
	$grad = 'repeating-linear-gradient(' + angle
	for $clr, $i in colors
		$grad += ',' + $clr + ' ' + $i*width + ',' + $clr + ' ' + ($i + 1)*width
	$grad += ')'
	return $grad
$gradclrs = $clr-red $clr-pink $clr-purple $clr-deep-purple $clr-indigo $clr-blue $clr-light-blue $clr-cyan $clr-teal $clr-green $clr-light-green $clr-lime $clr-yellow $clr-amber $clr-orange $clr-deep-orange //$clr-brown $clr-grey $clr-blue-grey

.content:not(.custom)
	max-width: 1200px

	a.bunt-link-button:hover
		text-decoration: none
table
	th:last-child, td:last-child
		width: 100%

.dark-background
	background-color: $clr-blue-grey
	padding: 8px 16px


.hero:before, .hero:after, header.navbar:before, header.navbar:after
	content: ''
	display: block
	position: absolute
	left: 0
	top: 0
	width: 100%
	height: 24px
	background-image:linear-gradient(to right, transparent, transparent 80%, white 95%), linear-gradient(to left, transparent, transparent 80%, white 95%), unquote(stripe($gradclrs, 90deg, 24px))
	background-size: 100% 102%
	background-repeat: no-repeat

.hero
	position: relative
	h1
		color: $clr-white
		font-family 'Roboto Mono'
		position: relative
		line-height 60px
		font-weight 200
		font-size 36px
		letter-spacing 2.25px
		margin 0 0 0 2px
		z-index 100
	&:before
		height: 64px
		opacity 0.7

header.navbar
	.home-link
		font-family 'Roboto Mono'
		letter-spacing 2.25px
		position: relative
		z-index 100
		.site-name
			color: $clr-white

	&:before, &:after
		width: 500px
		background-image: linear-gradient(to right, transparent, transparent 55%, white 95%), unquote(stripe($gradclrs, 90deg, 24px))

	&:before
		height: 100%
		opacity 0.7
	&:after
		height 21px
